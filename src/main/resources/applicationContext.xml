<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="pl.sdacademy.spring.beans" />

    <bean id="userRepository"
          class="pl.sdacademy.spring.beans.UserRepository">
        <property name="dbAddress" value="localhost" />
        <property name="timeZone" value="PL" />
    </bean>

    <bean id="cachingUserRepository"
          class="pl.sdacademy.spring.beans.CachingUserRepository" parent="userRepository">
        <property name="cachingStrategy" value="valueMapCache" />
    </bean>

    <bean id="userRepositoryTemplate" abstract = "true">
        <property name="dbAddress" value="localhost" />
        <property name="timeZone" value="PL" />
        <property name="cachingStrategy" value="nocache" />
    </bean>

    <bean id="externalCachingUserRepository"
          class="pl.sdacademy.spring.beans.CachingUserRepository" parent="userRepositoryTemplate">
        <property name="dbAddress" value="usersrepo.com" />
    </bean>

</beans>